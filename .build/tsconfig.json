{
	"compilerOptions": {
		"target": "es2017",
		"importHelpers": true,
		"moduleResolution": "node",
		"lib": ["es2017"],
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"module": "commonjs",
		"types": [
			"node"
		],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSourceMap": false,
		"outDir": "build"
	},
	"compileOnSave": false
}
